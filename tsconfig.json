{
  "compilerOptions": {
    "lib": ["ES2021"],
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "extends": "@tsconfig/react-native/tsconfig.json",
  "include": [
    "src/types/additional.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
}
